		meta(name="twitter:card", content="summary")
		meta(name="twitter:site", content="@baltimoresun")
		meta(name="twitter:creator", content="")
		meta(name="twitter:title", content="")
		meta(name="twitter:description", content="")
		meta(name="twitter:image", content="")
		meta(name="twitter:domain", content="baltimoresun.com")

	body
		include includes/omniture.html		
		.container
			.splash
				.splashWrap
					.headlineWrap
						h2 Readers vote:
						h1 Ravens' <br/>Best <br/>Plays >>
						p Compiled by Mark Selig
					img.splashImg(src="#{datalink}images/play8.png")
				.imageFade
			each play, index in plays
				.sixteenNine
					.playBlock(class="playBlock--#{index}" name="anchor#{index}" id="anchor#{index}")
						.headlineBlock
							h2 #{play.playName}
							.stripes.stripes--lightPurple
							.stripes.stripes--darkPurple
						.textBlock
							p.date #{play.playDate}
							p #{play.playText}
						.imageBlock
							img.shadow(src="#{datalink}images/play#{index}.png")
							img.cutout(src="#{datalink}images/play#{index}.png")
						.imageFade
						.nav
							if (index == 0)
								i.upButton.inactiveButton.icon-angle-circled-up(data-slideNum=index)
							else 
								i.upButton.activeButton.icon-angle-circled-up(data-slideNum=index)
							if (play.videoBool == "TRUE")
								a(href="#{play.playVideo}" target="_blank")
									i.videoButton.activeButton.icon-youtube-play
							else
								i.videoButton.inactiveButton.icon-youtube-play
							i.downButton.activeButton.icon-angle-circled-down(data-slideNum=index)
							i.downButton.activeButton.icon-ok-circled2(data-slideNum=9)
			.voteBlock.playBlock(class="playBlock--10" name="anchor10" id="anchor10")
				script(type="text/javascript" src="#{datalink}js/polljunkie.js")
				script(type="text/javascript").
					PollJunkie.show({"s":"whats-the-best-play-in-ravens-history","width":"300px","height":"300px","code":"crtrem","borderColor":"#241773","barBgColor":"black","fontColor":"black"});
